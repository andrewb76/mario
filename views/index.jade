extends layout

block navbar
  div.navbar-inner
    div.container-fluid
      button.btn.btn-navbar(type='button, data-toggle='collapse', data-target='.nav-collapse')
        span.icn-bar
        span.icn-bar
        span.icn-bar
      a.brand(href='#') Mario
      div#info
      div.nav-collapse.collapse
        p.navbar-text.pull-right Logged in as:&nbsp;
          a.navbar-link(href='#i!/') Andrew
        ul.nav
          li#m_item_start.active
            a(href='#!/') Start
          li#m_item_success
            a(href='#!/success') Success
          li#m_item_error
            a(href='#!/error') Error
block content
  div.span3
    div.well.sidebar-nav
      ul.nav.nav-list
        li.nav-header Sidebar
    
    div.well.routing-block#start
      ul.nav.nav-list
        li.nav-header Start
        li
          a(href='#') refresh
      ul#unit-list

    div.well
      ul.nav.nav-list
        li.nav-header Connections
        li#unit-detail
        #connList

    div.well
      ul.nav.nav-list
        li.nav-header Unit
        li#unit-detail
        #unitConnectionsList

    script#udetail-empty(type='text/template')
      <p>not selected</p>

    script#udetail-show(type='text/template')
      <a id="edit_unit" class="btn btn-mini" href="#"><i class="icon-edit"></i> Edit</a>
      <p>view: <%= Name %></p>

    script#udetail-edit(type='text/template')
      <form>
      <fieldset>
      <legend>Unit properties</legend>
      <label>Unit name</label>
      <input type="text" value="<%= Name %>"/>
      <span class="help-block">Unic unit code name.</span>
      <label class="checkbox">
      <input type="checkbox"> Check me out
      </label>
      <button type="submit" class="btn">Submit</button>
      <a id="view_unit" class="btn btn-mini" href="#"><i class="icon-search"></i> View</a>
      </fieldset>
      </form>

    div.well.routing-block#success
      ul.nav.nav-list
        li.nav-header Seccess

    div.well.routing-block#error
      ul.nav.nav-list
        li.nav-header Error


  div.span9
    div.well
      div#container

block scripts

  script#connListView(type='text/template')
    <p>connection list:</p>
  script#connEmptyView(type='text/template')
    <p>list empty</p>
  script#connItemView(type='text/template')
    <p><%= name %></p>

